<Window x:Class="Lab22.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="200" Width="300">
    <Grid>
        <Label Content="{DynamicResource Language}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <ComboBox Name="LanguageComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0" Width="120">
            <ComboBoxItem Content="English"/>
            <ComboBoxItem Content="Ukrainian"/>
        </ComboBox>
        <Button Content="{DynamicResource Save}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Width="75" Click="SaveButton_Click"/>
    </Grid>
</Window>